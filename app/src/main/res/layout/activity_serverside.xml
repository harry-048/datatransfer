<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aravind.datatransfer.serverside">


    <TextView
        android:id="@+id/dispstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="23dp"
        android:text="status" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:text=">" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:text=""
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/send"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text=""
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/dispstatus"
        android:layout_alignStart="@+id/dispstatus"
        android:layout_marginTop="104dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textSize="20dp"
        android:text=""
        android:layout_above="@+id/editText"
        android:layout_toRightOf="@+id/dispstatus"
        android:layout_toEndOf="@+id/dispstatus"
        android:layout_marginBottom="34dp" />
</RelativeLayout>
